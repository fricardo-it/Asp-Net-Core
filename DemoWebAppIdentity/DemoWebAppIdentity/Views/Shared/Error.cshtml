@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Error occurred" : Model.Title;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! An error occurred, but don't worry. Our team will be notified and will correct it soon! </h2>
        </div>

    }else{
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}
